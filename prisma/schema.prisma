generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Chef {
  id          String   @id @default(cuid())
  bio         String?  @db.VarChar(400)
  avatarUrl   String?
  coverUrl    String?
  phoneNumber String?
  nation      String?
  slug        String?
  createdAt   DateTime @default(now())

  Menus  Menu[]
  Photos Photo[]
  Dishes Dish[]

  user User @relation(fields: [id], references: [id], onDelete: Cascade)
}

model User {
  id        String   @id @default(cuid())
  firstname String
  lastname  String
  email     String
  password  String
  createdAt DateTime @default(now())

  chef Chef?
}

model Menu {
  id         String   @id @default(cuid())
  chefId     String
  created_at DateTime @default(now())

  Dishes Dish[]

  chef Chef @relation(fields: [chefId], references: [id], onDelete: Cascade)

  @@index([chefId])
}

model Photo {
  id         String   @id @default(cuid())
  filename   String
  path       String
  size       Int
  width      Int?
  height     Int?
  mimeType   String
  imageUrl   String
  chefId     String
  created_at DateTime @default(now())

  chef Chef @relation(fields: [chefId], references: [id], onDelete: Cascade)

  @@index([chefId])
}

model Dish {
  id         String   @id @default(cuid())
  listOrder  Int
  name       String
  course     String
  menuId     String
  chefId     String
  created_at DateTime @default(now())

  categories Category[]

  chef Chef @relation(fields: [chefId], references: [id], onDelete: Cascade)
  menu Menu @relation(fields: [menuId], references: [id])

  @@index([chefId])
}

model Category {
  id         String   @id @default(cuid())
  name       String
  created_at DateTime @default(now())

  Dishes Dish[]
}

model Chat {
  id     String @id @default(cuid())
  chefId String
  userId String

  Messages Message[]

  @@index([chefId])
}

model Message {
  id     String  @id @default(cuid())
  chatId String
  isChef Boolean
  text   String

  Chat Chat @relation(fields: [chatId], references: [id])
}
